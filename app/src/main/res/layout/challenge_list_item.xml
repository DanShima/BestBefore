<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/challenge_list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/challenge_badge"
        android:contentDescription="@string/challenge_badge_content_desc"
        android:layout_margin="@dimen/margin_challenge_badge"
        android:layout_width="@dimen/challenge_badge_size"
        android:layout_height="@dimen/challenge_badge_size"
        android:src="@drawable/ic_fruits"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <TextView
            android:id="@+id/challenge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/margin_large"
            android:gravity="start|center"
            tools:textColor="#000"
            tools:text="Fruit Ninja" />

        <TextView
            android:id="@+id/challenge_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorText"
            tools:text="No spoiled fruit for a week"/>

        <TextView
            android:id="@+id/challenge_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingTop="@dimen/margin_small"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            style="@style/TextAppearance.AppCompat.Caption"
            android:text="@string/challenge_take"/>

    </LinearLayout>

</LinearLayout>
