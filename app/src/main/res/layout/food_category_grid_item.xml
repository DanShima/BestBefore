<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerview_categories"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_food_category_height"
    android:background="@color/colorBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: show the number of items in the fridge per category -->
        <TextView
            android:id="@+id/food_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/number_items_fridge_counter"
            android:backgroundTint="@color/colorBadge"
            android:gravity="center"
            android:text="@null"
            android:visibility="gone"
            android:textColor="@color/colorText"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="@dimen/category_icon_size"
            android:layout_height="@dimen/category_icon_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:contentDescription="@null"
            android:src="@null" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/category_icon"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorText"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>